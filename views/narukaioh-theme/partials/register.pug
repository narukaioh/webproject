h1 Register

section
	form(method='post', action='/register')

		div.row.uniform

			div(class='6u 12u$(xsmall)')
				input(type='text', name='name', id='name', value='', placeholder='Nome')
			div(class="6u 12u$(xsmall)")
				input(type='text', name='login', id='login', value='', placeholder='Login')
			div(class="6u 12u$(xsmall)")
				input(type='email', name='email', id='email', value='', placeholder='E-mail')
			div(class="6u 12u$(xsmall)")
				input(type='password', name='password', id='password', value='', placeholder='Senha')
			div(class="6u 12u$(xsmall)")
				input(type='password', name='cpassword', id='cpassword', value='', placeholder='Confirmar senha')
			div(class='6u 12u$(xsmall)')
				button.button Logar			